{
  "scripts": {
    "lint:eslint": "eslint --ext .ts . --ignore-path .gitignore --max-warnings=0",
    "format:eslint": "eslint --ext .ts . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" \"**/*.ts\" --check --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" \"**/*.ts\" --write --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "tsc:watch": "tsc --watch",
    "test": "tsc && karma start --coverage",
    "test:watch": "concurrently --kill-others --names tsc,karma \"npm run tsc:watch\" \"karma start --auto-watch=true --single-run=false\"",
    "test:update-snapshots": "karma start --update-snapshots",
    "test:prune-snapshots": "karma start --prune-snapshots",
    "test:bs": "karma start karma.bs.config.js --coverage",
    "storybook": "concurrently --kill-others --names tsc,storybook \"npm run tsc:watch\" \"start-storybook --node-resolve --watch --open\"",
    "storybook:build": "build-storybook",
    "start:build": "cd dist && es-dev-server --open",
    "build": "rimraf dist && tsc && rollup -c rollup.config.js",
    "start": "concurrently --kill-others --names tsc,es-dev-server \"npm run tsc:watch\" \"es-dev-server --app-index index.html --node-resolve --open --watch\""
  },
  "devDependencies": {
    "@open-wc/building-rollup": "^0.21.0",
    "@open-wc/demoing-storybook": "^1.0.1",
    "@open-wc/eslint-config": "^2.0.0",
    "@open-wc/prettier-config": "^0.1.10",
    "@open-wc/testing": "^2.0.0",
    "@open-wc/testing-karma": "^3.0.0",
    "@open-wc/testing-karma-bs": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "concurrently": "^5.1.0",
    "deepmerge": "^3.2.0",
    "es-dev-server": "^1.5.0",
    "eslint": "^6.8.0",
    "husky": "^1.0.0",
    "lint-staged": "^8.0.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.15.4",
    "tslib": "^1.11.0",
    "typescript": "^3.8.2"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": "@open-wc/prettier-config",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "name": "my-app",
  "version": "0.0.0",
  "description": "Webcomponent my-app following open-wc recommendations",
  "author": "my-app",
  "license": "MIT",
  "dependencies": {
    "lit-element": "^2.0.1",
    "lit-html": "^1.0.0"
  }
}
